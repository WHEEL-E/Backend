{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["standard"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "newline-before-return": "warn",
    "space-before-function-paren": "warn",
    "sort-imports": "warn",
    "indent": "warn",
    "camelcase": "off",
    "key-spacing": "warn",
    "quotes": ["error", "single", { "allowTemplateLiterals": true }]
  }
}
